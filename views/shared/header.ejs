                            </ul>
                        </div>
                        <% if(typeof(userSession) ==="undefined"){%>
                        <a href="/signin" class="btn_1 d-none d-lg-block">Đăng Nhập</a>
                        <%}else if(userSession){%>
                        <!-- Navbar -->
                        <ul class="navbar-nav ml-auto ml-md-0">
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img class="rounded-circle" src="<%=userSession.avatar%>" alt="avt" width="45"
                                        height="45">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="/customer/<%=userSession._id%>"><%=userSession.displayname%></a>
                                    <a class="dropdown-item" href="#">Activity Log</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/signin/logout">Logout</a>
                                </div>
                            </li>
                        </ul>
                        <%}%>
                    </nav>
                </div>
            </div>
