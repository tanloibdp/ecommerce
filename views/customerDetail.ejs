<!DOCTYPE html>
<html>

<head>
    <% include ./shared/head %>
</head>

<body>
    <% include ./shared/header %>

    <!-- Code chính -->
    <div class="container">
        <div class="row my-2">
            <div class="col-lg-4 order-lg-2 text-center">
                <p>thông tin liên hệ</p>
            </div>
            <div class="col-lg-8 order-lg-1">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Thông tin cá
                            nhân</a>
                    </li>
                    <li class="nav-item">
                        <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Chỉnh Sửa thông tin</a>
                    </li>
                </ul>

                <div class="tab-content py-4">
                    <div class="tab-pane active" id="profile">
                        <h5 class="mb-3">Họ và Tên <p><%=customerInfor.displayname%></p>
                        </h5>
                        <h5 class="mb-3">Địa chỉ <p><%=customerInfor.address%></p>
                        </h5>
                        <h5 class="mb-3">Email <p><%=customerInfor.email%></p>
                        </h5>
                        <h5 class="mb-3">Số điện Thoại <p><%=customerInfor.numberPhone%></p>
                        </h5>
                        <h5 class="mb-3">Name on card <p>xxxxxxxxxxxxxxx</p>
                        </h5>
                        <h5 class="mb-3">Credit card number <p>xxxxxxxxxxxxxxx</p>
                        </h5>
                        <h5 class="mb-3">Expiration <p>xxxxxxxxxxxxxxx</p>
                        </h5>
                        <h5 class="mb-3">CVV <p>xxxxxxxxxxxxxxx</p>
                        </h5>
                    </div>
                    <div class="tab-pane" id="edit">
                        <form role="form">
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Họ Và Tên</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="<%=customerInfor.displayname%>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Email</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="email" value="<%=customerInfor.email%>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Địa chỉ</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="<%=customerInfor.address%>">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Số điện thoại</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="<%=customerInfor.numberPhone%>" placeholder="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Name on card</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="xxxxxxxxxxxxxxx" placeholder="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Credit card number</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="xxxxxxxxxxxxxxx" placeholder="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Expiration</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="xxxxxxxxxxxxxxx" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">CVV</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="xxxxxxxxxxxxxxx" placeholder="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">avatar</label>

                                <div class="col-lg-3">
                                    <input type="file" class="btn-default" name="" id="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Username</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="anhtuan">
                                </div>
                            </div>
                            <div class="form-group row" id="show_hide_password">
                                <label class="col-lg-3 col-form-label form-control-label">Password</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="password" value="abc123">
                                </div>
                                <div class="col-lg-3 input-group-addon">
                                    <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Confirm password</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="password" value="abc123">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label"></label>
                                <div class="col-lg-9">
                                    <input type="reset" class="btn btn-secondary" value="Thoát">
                                    <input type="button" class="btn btn-primary" value="Lưu">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <% include ./shared/footer %>
    <% include ./shared/chatlive %>
    <% include ./shared/javascripts %>
</body>

</html>